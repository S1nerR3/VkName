<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="@dimen/horizontal_padding"
    android:background="#FFFFFF"
    android:paddingEnd="@dimen/horizontal_padding"
    android:paddingTop="30"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="299dp"
        android:layout_height="wrap_content"
        android:text="@string/programm_name"
        android:textColor="@color/black"
        android:textSize="50"
        app:autoSizeTextType="uniform" />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="600dp"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:paddingTop="5"
        android:paddingBottom="100dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="89dp"
            android:layout_height="74dp"
            app:srcCompat="@drawable/vk_compact_logo__2021_present__svg" />

        <EditText
            android:id="@+id/et_search_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/write_vk_id"
            android:inputType="text"
            android:padding="10dp"
            android:textColorHint="#989797"
            android:textSize="25sp" />

        <Button
            android:id="@+id/b_search_vk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/search"
            app:backgroundTint="@color/lightblue" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parant"
        android:layout_hight="match_parant">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/vertical_p">

        <TextView
            android:id="@+id/tv_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/result"
            android:visiability="invisible"
            android:textSize="22sp"/>
    </ScrollView>

    <TextView
        android:id="@+id/error_massege"
        android:layout_width="wrap_content"
        android:layout_hight="wrap_content"
        android:padding="16dp"
        android:textSize="22sp"
        android:color="red2"
        android:text="@string/error_massege"
        android:visiability="invisible" />

    </FrameLayout>


</LinearLayout>

